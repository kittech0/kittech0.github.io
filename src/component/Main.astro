---
import Navbar from "./Navbar.astro";
import Title from "./Title.astro";
import ChangeTheme from "./ChangeTheme.astro";
import Language from "./Language.astro";
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<main>
    <ChangeTheme />
    <Language />
    <Title title={title} />
    <Navbar />
    <slot />
</main>

<style lang="scss">
    main {
        border-radius: 1em;
        text-align: center;
        max-width: 50em;
        min-width: 15em;
        margin: auto;
        padding: 2em;
        position: relative;
        box-shadow: var(--text-color) 0 0 1em;
        background-color: var(--main-bg);
    }
</style>
