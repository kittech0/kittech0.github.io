---
import Navbar from "./Navbar.astro";
import Title from "./Title.astro";
import ChangeTheme from "./ChangeTheme.astro";
interface Props {
    title: string
}
const {title} = Astro.props;
---
<main>
    <ChangeTheme/>

    <Title title={title}/>
    <Navbar/>
    <slot/>
</main>

<style lang="scss">
    main {
        border-radius: 1em;
        text-align: center;
        max-width: 50em;
        min-width: 15em;
        margin: auto;
        padding: 2em;
        position: relative;
    }
</style>